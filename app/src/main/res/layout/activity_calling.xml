<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CallingActivity"
    android:background="@color/purple_500"
>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/lin"
        android:layout_width="match_parent"
        android:layout_height="145dp"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/purple_500">

        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:src="@drawable/ic_baseline_keyboard_arrow_down_24"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="6dp"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="12dp">
            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/ic_baseline_lock_24"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toLeftOf="@id/tvend"
                android:layout_gravity="center"
                />
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tvend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_gravity="center"
                android:layout_marginLeft="4dp"
                android:text="End-to-end encrypted"
                android:textColor="@color/tosi"/>
        </LinearLayout>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/callingName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:text="Name"
            android:textColor="@color/white"
            android:textSize="25dp"/>
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/calling"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginBottom="15dp"
            android:text="Calling"
            android:textColor="@color/tosi"
            android:textSize="16sp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/lin"
        >
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/imgprofileCallung"
            android:layout_width="match_parent"
            android:layout_height="580dp"
            android:src="@drawable/eren"
            android:scaleType="centerCrop"
            app:layout_constraintTop_toBottomOf="@id/lin"
            />
    </LinearLayout>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imgendcall"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:src="@drawable/ic_baseline_call_end_24"
        android:layout_gravity="center"
        android:background="@drawable/border_endcall"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/lin2"
        android:foreground="?attr/selectableItemBackground"
        android:layout_marginBottom="35dp"
        android:padding="10dp"
        android:elevation="1dp"
        />


    <LinearLayout
        android:id="@+id/lin2"
        android:layout_width="match_parent"
        android:layout_height="78dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:orientation="horizontal"
        android:background="@color/purple_500">
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/volume"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="25dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_baseline_volume_up_24"
            android:foreground="?attr/selectableItemBackground"
            />
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/video"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="25dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_baseline_videocam_24tosi"/>
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/muted"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="25dp"
            android:layout_gravity="center"
            android:src="@drawable/microphone_off"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>