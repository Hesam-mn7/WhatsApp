<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/trans"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/imgProfilee"
        android:layout_width="250dp"
        android:layout_height="250dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:src="@drawable/eren"
        android:scaleType="centerCrop"
        android:foreground="?attr/selectableItemBackground"
        />
        <LinearLayout
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/imgProfilee"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:orientation="horizontal"
            android:background="@color/white"
            android:paddingTop="10dp"
            android:paddingBottom="10dp">
            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/allerimgmessage"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_baseline_message_24green"
                android:foreground="?attr/selectableItemBackground"/>
            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/allerimgcall"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:foreground="?attr/selectableItemBackground"
                android:src="@drawable/ic_baseline_call_24green"/>
            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/allerimgvideo"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:foreground="?attr/selectableItemBackground"
                android:src="@drawable/ic_baseline_videocam_24green"/>
            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/allerimginfo"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:foreground="?attr/selectableItemBackground"
                android:src="@drawable/ic_outline_info_24"/>
        </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>